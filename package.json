{
  "name": "motolink",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "lint:check": "biome check --write",
    "prepare": "husky",
    "db:dev": "docker compose up -d db",
    "db:test:up": "docker compose up -d test-db --wait",
    "db:test:down": "docker compose rm -sf test-db",
    "test": "pnpm db:test:up && export DATABASE_URL='postgresql://postgres:postgres@localhost:5433/test?schema=public' && pnpm prisma migrate deploy && vitest run; TEST_EXIT=$?; pnpm db:test:down; exit $TEST_EXIT",
    "test:coverage": "pnpm db:test:up && export DATABASE_URL='postgresql://postgres:postgres@localhost:5433/test?schema=public' && pnpm prisma migrate deploy && vitest run --coverage; TEST_EXIT=$?; pnpm db:test:down; exit $TEST_EXIT"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.4",
    "argon2": "^0.44.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.4",
    "firebase": "^12.9.0",
    "jsdom": "^28.0.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-safe-action": "^8.0.11",
    "next-themes": "^0.4.6",
    "pg": "^8.18.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prisma": "^7.4.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
